@model IEnumerable<Product>

@foreach (var p in Model)
    {

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @p.Name
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@p.Price.ToString("c")</small>
            </span>
        </h4>
    </div>

    <form id="@p.ProductID" asp-action="AddToCart" asp-controller="Cart" method="post">
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @p.Description
            <a href="@Url.Action("AddToCart", "Cart", new { productID = p.ProductID })"
                    class="btn btn-success btn-sm" style="float:right">
                Dodaj do koszyka
            </a>
        </span>
    </form>
</div>
}